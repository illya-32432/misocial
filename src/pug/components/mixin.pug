mixin card (oneCard)
    figure.card
        figcaption 
            img(src=oneCard.img, alt=oneCard.alt)
            p.personal #{oneCard.personal}
            p.price
                span.currency  #{oneCard.currency}
                b #{oneCard.price} /
                if oneCard.isMonth
                    | month
                else 
                    | year
            ul.description
                for oneText in oneCard.description
                    li #{oneText}
            a(href=oneCard.href) #{oneCard.btnText}